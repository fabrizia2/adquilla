{
    "compilerOptions": {
      "jsx": "react",
      "baseUrl": ".",
      "paths": {
        "@/components/*": ["src/components/*"],
        "@/lib/utils": ["src/lib/utils"],
        // Add other aliases you might use from vite.config.js if you want editor support
        "@/pages/*": ["src/pages/*"],
        "@/layouts/*": ["src/layouts/*"],
        "@/icons/*": ["src/components/icons/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }